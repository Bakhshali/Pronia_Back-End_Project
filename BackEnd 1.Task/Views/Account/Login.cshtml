@model LoginVM

@{
    ViewData["Title"] = "Login";
}


 <div class = "container">
     <div class = "row justify-content-center mt-5">
          <div class="col-lg-6">
              <div asp-validation-summary = "ModelOnly" class = "alert alert-danger"></div>
                <form method = "post">
                  <div class="login-form">
                    <h4 class="login-title">Login</h4>
                    <div class="row">
                      <div class="col-lg-12">
                        <label>Username</label>
                        <input asp-for = "Username" placeholder="Username" /> <br/>
                        <span asp-validation-for = "Username" class = "text-danger"></span>
                      </div>
                      <div class="col-lg-12">
                        <label>Password</label>
                        <input asp-for = "Password" placeholder="Password" /> <br/>
                        <span asp-validation-for = "Password" class = "text-danger"></span>
                      </div>
                      <div class="col-md-8">
                        <div class="check-box">
                          <input asp-for = "RememberMe" id="remember_me" />
                          <label for="remember_me">Remember me</label>
                        </div>
                      </div>
                      <div class="col-md-4 pt-1 mt-md-0">
                        <div class="forgotton-password_info">
                          <a href="#"> Forgotten pasward?</a>
                        </div>
                      </div>
                      <div class="col-lg-12 pt-5">
                        <button
                          class="btn btn-custom-size lg-size btn-pronia-primary"
                        >
                          Login
                        </button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
     </div>
 </div>
