@model Plant

@{
    ViewData["Title"] = "Edit";
}

<form method="post" enctype="multipart/form-data">
    <div>
        <label>Plant Name:</label> <br />
        <input asp-for="Name" class="mt-2 form-control" type="text"> <br />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div>
        <label>Plan Price:</label> <br />
        <input asp-for="Price" class="mt-2 form-control" type="text"> <br />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div>
        <label>Plant Description:</label> <br />
        <input asp-for="Description" class="mt-2 form-control" type="text"> <br />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div>
        <label>Plant DiscoverURL:</label> <br />
        <input asp-for="SKUCode" class="mt-2 form-control" type="text"> <br />
        <span class="text-danger" asp-validation-for="SKUCode"></span>
    </div>


    <div>
        <label>Plant Colors:</label> <br />
        <select class="form-control" asp-for="ColorId" asp-items="@(new SelectList(ViewBag.Colors,"Id","Name"))"></select>
        <span class="text-danger" asp-validation-for="ColorId"></span>
    </div>
    <div>
        <label>Plant Sizes:</label> <br />
        <select class="form-control" asp-for="SizeId" asp-items="@(new SelectList(ViewBag.Sizes,"Id","Name"))"></select>
        <span class="text-danger" asp-validation-for="SizeId"></span>
    </div>


    <div>
        <label>Plant Shipping:</label> <br />
        <input asp-for="Shipping" class="mt-2 form-control" accept="image/*" type="text"> <br />
        <span class="text-danger" asp-validation-for="Shipping"></span>
    </div>
    <div>
        <label>Plant Request:</label> <br />
        <input asp-for="Request" class="mt-2 form-control" />
        <span class="text-danger" asp-validation-for="Request"></span>
    </div>
    <div>
        <label>Plant Guarantee:</label> <br />
        <input asp-for="Guarantee" class="mt-2 form-control" />
        <span class="text-danger" asp-validation-for="Guarantee"></span>
    </div>
    <div>
        <label>Plant MainImage:</label> <br />
        <input accept="image/*" asp-for="MainImage" class="mt-2 form-control" />
        <span class="text-danger" asp-validation-for="MainImage"></span>
    </div>
    <div>
        <label>Plant AnotherImage:</label> <br />
        <input accept="image/*" asp-for="AnotherImages" class="mt-2 form-control" />
        <span class="text-danger" asp-validation-for="AnotherImages"></span>
    </div>
    <div>
        <span>Plant MainIMG:</span> <br />

        <div class="d-flex">
            <div class="col-lg-2" style="position:relative">
                <img style="width:150px; height:120px" src="~/assets/images/website-images/@Model.PlantImages.FirstOrDefault(i=>i.IsMain==true).ImagePath">
                <i class="mdi mdi-close closeBtn" style="position:absolute;top:10px;right:5px;color:red;font-size:20px"></i>
                <input type="hidden" value="@Model.PlantImages.FirstOrDefault(i=>i.IsMain==true).Id" name="AnotherIMGid" />
            </div>
        </div>

    </div>
    <span>AnotherIMG:</span> <br />
    <div class="d-flex">
        @foreach (var item in Model.PlantImages.Where(i => i.IsMain == false))
        {
            <div class="col-lg-2" style="position:relative">
                <i class="mdi mdi-close closeBtn" style="position:absolute;top:10px;right:5px;color:red;font-size:20px"></i>
                <img style="width:150px; height:120px" src="~/assets/images/website-images/@item?.ImagePath">
                <input type="hidden" value="@item.Id" name="AnotherIMGid" />
            </div>
        }
    </div>
    <div>
        <button style="color:white" class="mt-3 btn btn-primary">Submit</button>
    </div>

</form>

@section Scripts{
<script>
    $(".closeBtn").click(function(){
        this.parentNode.remove();
    })
     $(".closeBtn").click(function(){
        this.parentNode.remove();
    })
</script>
}

