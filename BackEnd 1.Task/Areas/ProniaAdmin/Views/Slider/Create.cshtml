@model Slider

@{
    ViewData["Title"] = "Create";
}

<form method="post" enctype="multipart/form-data">
    <div>
        <label >Slider Title:</label> <br/>
        <input asp-for="Title" class = "mt-2 form-control"  type = "text"> <br/>
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
        <div>
        <label >Slider Subtitle:</label> <br/>
        <input asp-for="Subtitle" class = "mt-2 form-control"  type = "text"> <br/>
        <span class="text-danger" asp-validation-for="Subtitle"></span>
    </div> 
    <div>
        <label >Slider Discount:</label> <br/>
        <input asp-for="Discount" class = "mt-2 form-control"  type = "text"> <br/>
        <span class="text-danger" asp-validation-for="Discount"></span>
    </div>  
    <div>
        <label >Slider DiscoverURL:</label> <br/>
        <input asp-for="DiscoverURL" class = "mt-2 form-control"  type = "text"> <br/>
        <span class="text-danger" asp-validation-for="DiscoverURL"></span>
    </div>
   
    <div>
        <label >Slider Order:</label> <br/>
        <input asp-for="Order" class = "mt-2 form-control" accept="image/*"  type = "text"> <br/>
        <span class="text-danger" asp-validation-for="Order"></span>
    </div>
     <div>
        <label>Color name:</label> <br/>
    <input accept="image/*" asp-for="Photo" class="mt-2 form-control"/>
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div>
        <button style = "color:white" class = "mt-3 btn btn-primary">Submit</button>
    </div>
    
</form>

